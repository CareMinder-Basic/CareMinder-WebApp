{
  "name": "careminder-pc",
  "private": true,
  "author": "nimod",
  "description": "CareMinder",
  "version": "1.0.9",
  "type": "module",
  "main": "src/electron.js",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron-dev": "electron .",
    "electron-pack": "vite build && electron-builder",
    "release-mac": "vite build && electron-builder --publish always",
    "release-win": "vite build && electron-builder --win --x64 --publish always"
  },
  "dependencies": {
    "@emotion/react": "11.13.3",
    "@emotion/styled": "11.13.0",
    "@mui/base": "^5.0.0-beta.68",
    "@mui/icons-material": "^5.15.12",
    "@mui/material": "^5.15.12",
    "@mui/x-date-pickers": "^7.23.2",
    "@stomp/stompjs": "^7.0.0",
    "@tanstack/react-query": "^5.25.0",
    "@toss/react": "^1.7.0",
    "@types/stompjs": "^2.3.9",
    "@types/uuid": "^10.0.0",
    "auto-launch": "^5.0.6",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "eslint-plugin-prettier": "5.2.1",
    "event-source-polyfill": "^1.0.31",
    "firebase": "^10.8.0",
    "framer-motion": "^11.15.0",
    "js-cookie": "^3.0.5",
    "moment": "^2.30.1",
    "push-receiver-v2": "^2.2.0",
    "react": "^18.2.0",
    "react-calendar": "^5.1.0",
    "react-daum-postcode": "^3.1.3",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.52.0",
    "react-idle-timer": "^5.7.2",
    "react-mobile-picker": "^1.0.1",
    "react-router-dom": "^6.22.2",
    "react-toastify": "^10.0.4",
    "recoil": "^0.7.7",
    "recoil-persist": "^5.1.0",
    "secure-electron-store": "^4.0.2",
    "sockjs-client": "^1.6.1",
    "sound-play": "^1.1.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@svgr/rollup": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/event-source-polyfill": "^1.0.5",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@types/sockjs-client": "^1.5.4",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "3.3.3",
    "rollup": "4.24.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-babel-macros": "^1.0.6",
    "vite-tsconfig-paths": "^4.3.1",
    "wait-on": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CareMinder-Basic/CareMinder-WebApp"
  },
  "build": {
    "asar": true,
    "compression": "maximum",
    "appId": "com.careflow.careminder",
    "productName": "CareMinder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "electron/**/*",
      "public/**/*",
      "preload.js",
      "electron.js"
    ],
    "mac": {
      "target": [
        "default"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "icon": "build/icons.icns",
      "category": "public.app-category.healthcare"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/ico/icon_256.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "CareMinder-Basic",
      "repo": "CareMinder-WebApp",
      "releaseType": "release"
    },
    "dmg": {
      "title": "CareMinder",
      "icon": "build/icons.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true,
      "language": 1042,
      "installerIcon": "build/ico/icon_256.ico",
      "shortcutName": "CareMinder",
      "artifactName": "CareMinder-${version}.${ext}",
      "uninstallDisplayName": "CareMinder"
    }
  }
}
